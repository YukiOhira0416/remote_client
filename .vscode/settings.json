{
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.generator": "Visual Studio 17 2022",
    "cmake.platform": "x64",
    "cmake.configureArgs": [
        "-DCMAKE_BUILD_TYPE=Debug"
    ],
    "cmake.buildArgs": [
        "--config",
        "Debug"
    ],
    "cmake.debugConfig": {
        "name": "Debug RemoteClient",
        "program": "${command:cmake.launchTargetPath}",
        "args": [],
        "cwd": "${workspaceFolder}"
    },
    "files.associations": {
        "*.hlsl": "hlsl",
        "iostream": "cpp",
        "utility": "cpp",
        "fstream": "cpp",
        "algorithm": "cpp",
        "chrono": "cpp",
        "ctime": "cpp",
        "regex": "cpp",
        "vector": "cpp",
        "iomanip": "cpp",
        "cstring": "cpp",
        "condition_variable": "cpp",
        "sstream": "cpp",
        "cmath": "cpp",
        "atomic": "cpp",
        "stdexcept": "cpp",
        "mutex": "cpp",
        "string": "cpp",
        "exception": "cpp",
        "thread": "cpp",
        "filesystem": "cpp",
        "map": "cpp",
        "queue": "cpp",
        "deque": "cpp"
    }
}
